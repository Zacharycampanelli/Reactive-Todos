{
  "name": "todoapp",
  "version": "1.0.0",
  "main": "server/server.ts",
  "type": "commonjs",
  "scripts": {
    "start": "tsx server/server.ts",
    "client": "cd client && npm run dev",
    "develop": "concurrently \"cd server && npm start\" \"cd client && npm run dev\"",
    "installDeps": "npm i && cd client && npm i",
    "build": "npm run build:server && npm run build:client",
    "build:server": "tsc --project tsconfig.server.json",
    "build:client": "cd client && tsc --project tsconfig.build.json && vite build",
    "start:prod": "node dist/server.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cookie-parser": "^1.4.7",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.13.0",
    "mongoose": "^8.9.6",
    "nodemailer": "^6.10.0"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^22.13.1",
    "concurrently": "^9.1.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "nodemon": "^3.1.9",
    "prettier": "^3.5.2",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.3",
    "typescript": "^5.7.3"
  }
}
